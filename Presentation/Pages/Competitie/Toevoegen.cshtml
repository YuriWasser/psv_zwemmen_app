@page
@model Presentation.Pages.Competitie.ToevoegenModel;

@{
    ViewData["Title"] = "Toevoegen";
    Layout = "_Layout";
}

<main class="p-6 max-w-xl mx-auto">
    <h2 class="text-2xl font-semibold mb-4">Competitie toevoegen</h2>

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Naam" class="block font-medium">Naam:</label>
            <input asp-for="Naam" class="form-input w-full rounded border border-gray-300 bg-white focus:border-red-500 focus:ring focus:ring-red-200" />
        </div>

        <div>
            <label asp-for="StartDatum" class="block font-medium">Startdatum:</label>
            <input asp-for="StartDatum" type="date" class="form-input w-full rounded border border-gray-300 bg-white focus:border-red-500 focus:ring focus:ring-red-200" />
        </div>

        <div>
            <label asp-for="EindDatum" class="block font-medium">Einddatum:</label>
            <input asp-for="EindDatum" type="date" class="form-input w-full rounded border border-gray-300 bg-white focus:border-red-500 focus:ring focus:ring-red-200" />
        </div>

        <div>
            <label asp-for="ZwembadId" class="block font-medium">Zwembad:</label>
            <select asp-for="ZwembadId" asp-items="Model.Zwembaden" class="form-select w-full rounded border border-gray-300 bg-white focus:border-red-500 focus:ring focus:ring-red-200"></select>
        </div>

        <div class="mt-4 p-4 border border-gray-200 rounded bg-gray-50">
            <p class="font-medium mb-2">Nieuw programma aanmaken:</p>
            <div class="mt-4 p-4 border border-gray-200 rounded bg-gray-50">
                <p class="font-medium mb-2">Kies afstanden en bepaal de volgorde:</p>
                <div class="grid grid-cols-1 gap-2">
                    @for (int i = 0; i < Model.Afstanden.Count; i++)
                    {
                        <div class="flex items-center space-x-4">
                            <input type="checkbox"
                                   asp-for="Afstanden[@i].Geselecteerd"
                                   class="form-checkbox text-red-600 rounded border-gray-300" />
                            <input type="hidden" asp-for="Afstanden[@i].AfstandId" />
                            <span class="w-48">@Model.Afstanden[i].AfstandNaam</span>
                            <label class="ml-2">Volgorde:</label>
                            <input asp-for="Afstanden[@i].Volgorde"
                                   type="number"
                                   min="1"
                                   class="form-input w-20 rounded border border-gray-300 bg-white" />
                        </div>
                    }
                </div>
            </div>

            <div class="mt-2">
                <label asp-for="ProgrammaStarttijd" class="block font-medium">Starttijd:</label>
                <input asp-for="ProgrammaStarttijd" type="time" class="form-input w-full rounded border border-gray-300 bg-white" />
            </div>
        </div>

        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
            Toevoegen
        </button>
    </form>
</main>
