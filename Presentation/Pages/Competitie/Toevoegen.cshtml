@page
@model Presentation.Pages.Competitie.ToevoegenModel;

@{
    ViewData["Title"] = "Toevoegen";
    Layout = "_Layout";
}

<main class="p-6 max-w-xl mx-auto">
    <h2 class="text-2xl font-semibold mb-4">Competitie toevoegen</h2>

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Naam" class="block font-medium">Naam:</label>
            <input asp-for="Naam" class="form-input w-full rounded border-gray-300" />
        </div>

        <div>
            <label asp-for="StartDatum" class="block font-medium">Startdatum:</label>
            <input asp-for="StartDatum" type="date" class="form-input w-full rounded border-gray-300" />
        </div>

        <div>
            <label asp-for="EindDatum" class="block font-medium">Einddatum:</label>
            <input asp-for="EindDatum" type="date" class="form-input w-full rounded border-gray-300" />
        </div>

        <div>
            <label asp-for="ZwembadId" class="block font-medium">Zwembad ID:</label>
            <input asp-for="ZwembadId" class="form-input w-full rounded border-gray-300" />
        </div>

        <div>
            <label asp-for="ProgrammaId" class="block font-medium">Programma ID:</label>
            <input asp-for="ProgrammaId" class="form-input w-full rounded border-gray-300" />
        </div>

        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-600">
            Toevoegen
        </button>
    </form>
</main>