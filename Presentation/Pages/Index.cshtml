@page
@model Presentation.Pages.IndexModel

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<main class="bg-gray-50 min-h-screen">


    <section class="relative h-[500px]">
        <img src="/images/Psv_Zwemmen_Actie_Foto.jpeg" alt="Topzwemmen"
             class="absolute inset-0 w-full h-full object-cover">
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
            <h1 class="text-white text-4xl md:text-6xl font-extrabold text-center px-4">
                Topzwemmen van regionaal tot internationaal niveau
            </h1>
        </div>
    </section>


    <section class="py-16 px-8 text-center">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl font-semibold text-gray-800 mb-4">Welkom bij Zwemvereniging AquaTop</h2>
            <p class="text-gray-700 leading-relaxed">
                Bij AquaTop draait alles om passie voor zwemmen. Of je nu op recreatief of competitief niveau zwemt, bij
                ons vind je uitdaging, plezier en groei.
            </p>
        </div>
    </section>


    <section class="bg-red-600 text-white py-16 text-center">
        <h3 class="text-4xl font-bold mb-4">Word jij onze nieuwe zwemkampioen?</h3>
        <p class="text-lg mb-6">Sluit je vandaag nog aan en ontdek wat je kunt bereiken met AquaTop!</p>
        <a href="/lid-worden"
           class="bg-white text-orange-500 font-bold py-3 px-8 rounded-full transition hover:bg-gray-100">Word lid</a>
    </section>

</main>