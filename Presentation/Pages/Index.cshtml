@page
@model Presentation.Pages.IndexModel

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<header class="bg-white shadow-md sticky top-0 z-50 w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
        <a href="/" class="flex items-center">
            <img class="h-10" src="~/image/PSV_Zwemmen_Logo.png" alt="PSV Zwemmen Logo" />
        </a>
        <nav class="space-x-8 text-gray-700 font-semibold">
            <a href="/lid-worden" class="hover:text-orange-600">Lid worden</a>
            <a href="/ons-zwemteam" class="hover:text-orange-600">Ons zwemteam</a>
            <a href="/contact" class="hover:text-orange-600">Contact</a>
        </nav>
    </div>
</header>

<main class="bg-white min-h-screen py-16 px-4 sm:px-8 lg:px-20">
    <section class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 mb-6">
            Welkom bij PSV Zwemmen
        </h1>
        <p class="text-lg text-gray-600 mb-10">
            Dé plek voor zwemliefhebbers in Eindhoven en omgeving. Doe mee met onze zwemteams, trainingen en wedstrijden.
        </p>
        <a href="/lid-worden" class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-lg shadow-md transition">
            Word vandaag nog lid
        </a>
    </section>
</main>