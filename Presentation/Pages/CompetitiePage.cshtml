@page
@model WebApp.Pages.CompetitiePageModel

<div class="max-w-6xl mx-auto mt-10 px-4">
    <h1 class="text-3xl font-bold text-center text-blue-800 mb-8">Wedstrijden</h1>

    @if (!Model.Competities.Any())
    {
        <div class="text-center text-gray-600">Geen wedstrijden gevonden.</div>
    }
    else
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var competitie in Model.Competities)
            {
                <a href="/ProgrammaPage?id=@competitie.Id"
                   class="block bg-white rounded-3xl p-6 border border-gray-200 shadow-md hover:shadow-xl transform hover:scale-105 transition duration-200 ease-in-out cursor-pointer">
                    <h2 class="text-xl font-semibold text-blue-700 mb-2">@competitie.Naam</h2>

                    <p class="text-gray-700">
                        <span class="font-semibold">Startdatum:</span>
                        @(competitie.StartDatum.HasValue ? competitie.StartDatum.Value.ToShortDateString() : "Niet opgegeven")
                    </p>

                    <p class="text-gray-700">
                        <span class="font-semibold">Locatie:</span>
                        @competitie.Zwembad?.Naam, @competitie.Zwembad?.Adres
                    </p>
                </a>
            }
        </div>
    }
</div>