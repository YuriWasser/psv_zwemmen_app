@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand flex items-center" asp-area="" asp-page="/Index">
                <img src="~/image/PSV_Zwemmen_Logo.png" alt="PSV Zwemmen Logo" class="h-10"/>
            </a>

            <div class="d-flex align-items-center">
                <a asp-page="/lid-worden" class="font-semibold text-black no-underline me-3">Lid worden</a>
                <a asp-page="/ons-zwemteam" class="font-semibold text-black no-underline me-3">Ons zwemteam</a>
                <a asp-page="/contact" class="font-semibold text-black no-underline me-3">Contact</a>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <!-- Profiel dropdown knop -->
                    <div class="dropdown">
                        <button class="bg-red-600 hover:bg-red-700 text-white rounded-full p-2 transition d-flex align-items-center justify-content-center"
                                type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="width: 40px; height: 40px;">
                            <!-- Poppetje icoon -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 12c2.67 0 8 1.34 8 4v2H4v-2c0-2.66 5.33-4 8-4zm0-2a4 4 0 1 1 0-8 4 4 0 0 1 0 8z"/>
                            </svg>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" asp-page="/Competitie/Index">Competitie</a></li>
                            <li><a class="dropdown-item" asp-page="/Beveiligd/Profiel">Profiel</a></li>
                            <li><a class="dropdown-item text-danger" asp-page="/Gebruiker/LogOut">Uitloggen</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-page="/Gebruiker/Index"
                       class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition no-underline">Inloggen</a>
                }
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>